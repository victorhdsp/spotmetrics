generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id          String  @id @default(uuid())
  name        String
  username    String?
  createdAt   DateTime @default(now())
  skills      Skill @relation(fields: [skillId], references: [id])
  skillId     String @unique
}

model Skill {
  id          String  @id @default(uuid())
  power       Int    @default(0)
  speed       Int    @default(0)
  dribble     Int?
  playerId    String

  Player Player?
}